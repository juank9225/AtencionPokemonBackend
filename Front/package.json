{
  "name": "salud-pokemon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p client server",
    "client": "react-scripts start",
    "server": "json-server --port 3001 --watch src/infraestructura/server/db.json",
    "seed": "node server/seed.js",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && open coverage/index.html"
  },
  "dependencies": {
    "bootstrap": "^4.5.3",
    "firebase": "^8.8.1",
    "md5": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "reactfire": "^3.0.0-rc.0",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "json-server": "^0.16.3",
    "npm-run-all": "^4.1.5",
    "mocha": "^9.0.2",
    "nyc": "^15.1.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "nyc": {
      "all": true,
      "include": [
        "./src/aplicacion",
        "./src/infraestructura",
        "./src/presentacion"
      ]
    }
  }
}
